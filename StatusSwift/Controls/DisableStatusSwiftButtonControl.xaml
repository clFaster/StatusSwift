<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StatusSwift.Controls.DisableStatusSwiftButtonControl"
             x:Name="DisableStatusSwiftButton">
    <Button
        Text="Disable StatusSwift"
        Command="{Binding ButtonCommand, Source={x:Reference DisableStatusSwiftButton}}"
        WidthRequest="220"
        HeightRequest="60"
        BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"
        TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}">
    </Button>
</ContentView>
