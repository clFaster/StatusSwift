<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:StatusSwift.Controls"
             x:Class="StatusSwift.Controls.TimerDisplayControl"
             x:Name="timerDisplayControl">
    <VerticalStackLayout
        HorizontalOptions="Center"
        BindingContext="{x:Reference timerDisplayControl}"
        x:DataType="controls:TimerDisplayControl">
        <Label
            Text="{Binding TimerLabel}" />

        <Border
            StrokeShape="RoundRectangle 8,8,8,8"
            BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
            Stroke="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
            StrokeThickness="3"
            Padding="15,10,15,6"
            Margin="0,7,0,5">
            <Label
                Style="{StaticResource TimerDisplayLabel}"
                Text="{Binding ElapsedTime}" />
        </Border>
    </VerticalStackLayout>
</ContentView>