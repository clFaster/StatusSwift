<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StatusSwift.Controls.AppHeaderControl"
             x:Name="appHeaderControl">
    <VerticalStackLayout HorizontalOptions="Center" Spacing="0" Margin="0,0,0,10">
        <Label
            Text="{Binding AppTitle, Source={x:Reference appHeaderControl}}"
            FontSize="26"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Label
            Text="{Binding AppSubtitle, Source={x:Reference appHeaderControl}}"
            FontSize="14"
            HorizontalOptions="Center"
            TextColor="{AppThemeBinding Light=#777777, Dark=#aaaaaa}" />
    </VerticalStackLayout>
</ContentView>