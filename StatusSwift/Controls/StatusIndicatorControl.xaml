<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StatusSwift.Controls.StatusIndicatorControl"
             x:Name="statusIndicatorControl">
    <StackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center" 
        FlowDirection="LeftToRight" 
        Orientation="Horizontal" 
        Spacing="15">
        <!-- Indicator -->
        <Border
            x:Name="StatusIndicator"
            Style="{StaticResource StatusIndicator}"

            BackgroundColor="{Binding IndicatorColor, Source={x:Reference statusIndicatorControl}}">
            <Border.Shadow>
                <Shadow
                    Brush="{Binding IndicatorColor, Source={x:Reference statusIndicatorControl}}"
                    Offset="0,0"
                    Opacity="0.5"
                    Radius="8" />
            </Border.Shadow>
        </Border>
        <Label
            Style="{StaticResource SubHeadline}"
            Text="{Binding StatusText, Source={x:Reference statusIndicatorControl}}"/>
    </StackLayout>
</ContentView>