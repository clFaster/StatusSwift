<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:StatusSwift.Behaviors"
             xmlns:controls="clr-namespace:StatusSwift.Controls"
             x:Class="StatusSwift.Controls.StatusIndicatorControl"
             x:Name="statusIndicatorControl">

    <StackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        FlowDirection="LeftToRight"
        Orientation="Horizontal"
        Spacing="15"
        BindingContext="{x:Reference statusIndicatorControl}"
        x:DataType="controls:StatusIndicatorControl">
        <!-- Indicator -->
        <Border
            x:Name="StatusIndicator"
            Style="{StaticResource StatusIndicatorActive}"
            IsVisible="{Binding IsActive}">
            <Border.Behaviors>
                <behaviors:PulseAnimationBehavior />
            </Border.Behaviors>
        </Border>
        <Border
            x:Name="StatusIndicatorInactive"
            Style="{StaticResource StatusIndicator}"
            IsVisible="{Binding IsActive, Converter={StaticResource InvertedBoolConverter}}" />
        <Label
            Style="{StaticResource SubHeadline}"
            Text="{Binding StatusText}" />
    </StackLayout>
</ContentView>