<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StatusSwift.Controls.StatusIndicatorControl"
             x:Name="statusIndicatorControl">
    <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center" HorizontalOptions="Center">
        <Border
            x:Name="StatusIndicator"
            WidthRequest="16"
            HeightRequest="16"
            StrokeThickness="0"
            StrokeShape="Ellipse"
            BackgroundColor="{Binding IndicatorColor, Source={x:Reference statusIndicatorControl}}"
            Margin="0,0,10,0">
            <Border.Shadow>
                <Shadow
                    Brush="{Binding IndicatorColor, Source={x:Reference statusIndicatorControl}}"
                    Offset="0,0"
                    Opacity="0.5"
                    Radius="8" />
            </Border.Shadow>
        </Border>
        <Label
            Grid.Column="1"
            Text="{Binding StatusText, Source={x:Reference statusIndicatorControl}}"
            FontSize="18"
            FontAttributes="Bold"
            VerticalOptions="Center" />
    </Grid>
</ContentView>