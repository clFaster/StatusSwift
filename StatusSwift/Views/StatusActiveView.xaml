<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:StatusSwift.Controls"
             x:Class="StatusSwift.Views.StatusActiveView">
    <VerticalStackLayout Spacing="20">
        <!-- App Header -->
        <controls:AppHeaderControl />
        <!-- Status Indicator -->
        <controls:StatusIndicatorControl
            IsActive="{Binding IsActive}" />        <!-- Timer Display -->
        <controls:TimerDisplayControl
            TimerVisible="{Binding IsActive}"
            ElapsedTime="{Binding ElapsedTimeText}" />
        <!-- Action Button -->
        <controls:ActionButtonControl
            ButtonText="{Binding ButtonText}"
            ButtonCommand="{Binding ToggleStatusSwiftActiveCommand}"
            IsActiveState="{Binding IsActive}" />
    </VerticalStackLayout>
</ContentView>