<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:StatusSwift.Controls"
             x:Class="StatusSwift.Views.StatusInactiveView">
    <VerticalStackLayout Spacing="20">
        <!-- App Header -->
        <controls:AppHeaderControl />

        <!-- Status Indicator -->
        <controls:StatusIndicatorControl
            IsActive="{Binding IsActive}" />        <!-- Action Button -->
        <controls:EnableButtonControl
            ButtonText="{Binding ButtonText}"
            ButtonCommand="{Binding ToggleStatusSwiftActiveCommand}" />
    </VerticalStackLayout>
</ContentView>